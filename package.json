{
  "name": "electronizr",
  "productName": "electronizr",
  "version": "3.0.0",
  "author": {
    "name": "Oliver Schwendener",
    "email": "oliver.schwendener@hotmail.com",
    "url": "https://github.com/oliverschwendener"
  },
  "description": "A cross-platform alt+space launcher",
  "main": "./build/js/main.js",
  "scripts": {
    "scss:watch": "./node_modules/.bin/gulp --watch",
    "tsc:watch": "./node_modules/.bin/tsc --watch",
    "build": "./node_modules/.bin/tsc && ./node_modules/.bin/gulp build",
    "start": "./node_modules/.bin/electron .",
    "start:dev": "yarn build && yarn start",
    "dev": "./node_modules/.bin/electron . --enable-logging",
    "lint": "./node_modules/.bin/tslint src/**/*.ts",
    "test:unit": "./node_modules/.bin/jest --silent ./src/tests/unit/**/*.test.ts",
    "test:integration": "./node_modules/.bin/jest --silent ./src/tests/integration/**/*.test.ts",
    "package:publish": "./node_modules/.bin/electron-builder --config electron-builder-config.yml --publish onTag",
    "package": "./node_modules/.bin/electron-builder --config electron-builder-config.yml --publish never"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint test && yarn test:unit",
      "pre-push": "yarn test:integration"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "electron": "^1.7.12",
    "electron-builder": "^19.55.3",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "husky": "^0.15.0-rc.8",
    "mocha": "^5.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.20.1",
    "fuse.js": "^3.2.0",
    "jest": "^22.4.2",
    "ts-jest": "^22.4.0",
    "vue": "^2.5.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oliverschwendener/electronizr"
  }
}
