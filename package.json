{
  "name": "electronizr",
  "productName": "electronizr",
  "version": "2.3.4",
  "description": "An alt+space launcher for Windows",
  "author": "Oliver Schwendener",
  "license": "MIT",
  "main": "./js/main.js",
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.20.0",
    "escape-html": "^1.0.3",
    "leven": "^2.1.0",
    "mime": "^1.6.0",
    "textextensions": "^2.0.1",
    "vue": "^2.5.13"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "electron": "^1.7.11",
    "electron-builder": "^19.55.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-sass": "^3.1.0"
  },
  "scripts": {
    "start": "./node_modules/.bin/electron ./js/main.js",
    "build": "./node_modules/.bin/gulp build",
    "watch": "./node_modules/.bin/gulp watch",
    "release": "./node_modules/.bin/electron-builder --publish onTag",
    "package": "./node_modules/.bin/electron-builder --publish never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oliverschwendener/electronizr"
  },
  "build": {
    "files": [
      "./js/**/*.js",
      "./css/**/*.css",
      "./**/*.html",
      "./img/icon.ico"
    ],
    "win": {
      "icon": "./img/icon.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true
    }
  }
}