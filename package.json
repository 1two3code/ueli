{
  "name": "electronizr",
  "productName": "electronizr",
  "version": "3.0.0",
  "author": {
    "name": "Oliver Schwendener",
    "email": "oliver.schwendener@hotmail.com",
    "url": "https://github.com/oliverschwendener"
  },
  "description": "A cross-platform alt+space launcher",
  "main": "src/js/main.js",
  "scripts": {
    "scss:watch": "./node_modules/.bin/gulp --watch",
    "tsc:watch": "./node_modules/.bin/tsc --watch",
    "build": "./node_modules/.bin/tsc && ./node_modules/.bin/gulp build",
    "start": "./node_modules/.bin/electron .",
    "dev": "./node_modules/.bin/electron . --enable-logging",
    "test": "./node_modules/.bin/mocha -r ./node_modules/ts-node/register ./tests/**/*.test.ts",
    "package:publish": "./node_modules/.bin/electron-builder --config build-config.yml --publish onTag",
    "package": "./node_modules/.bin/electron-builder --config build-config.yml --publish never"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "electron": "^1.7.12",
    "electron-builder": "^19.55.3",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "mocha": "^5.0.0",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1"
  },
  "license": "MIT",
  "dependencies": {
    "fuse.js": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oliverschwendener/electronizr"
  }
}
